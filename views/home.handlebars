<section class="py-2">
    <div class="row">
        <div class="col-md-6 text-center">
            <h1 class="display-3 mt-3 pt-5">
                Shop Hive
            </h1><p class="lead">Quality is a legacy</p>
            <form action="/charge" method="POST">       
                <script
                    src="https://checkout.stripe.com/checkout.js"
                    class="stripe-button"
                    data-key="{{stripePublishableKey}}"
                    data-amount="2500"
                    data-name="Fredrick Frank"
                    data-description="Foot Wear by Shop Hive"
                    data-image="/img/shopping.png"
                    data-locale="auto">
                </script>
                <script>
                    //hide default stripe button
                    document.getElementsByClassName('stripe-button-el')[0].style.display = 'none';
                </script>
                <button type="submit" class="btn btn-outline-dark text-white btn-lg">
                    Purchase For $25</button>
            </form>
        </div>
        <div class="col-md-6">
            <img src="/img/shopping.png" alt="" class="img-fluid">
        </div>
    </div>
</section>
 